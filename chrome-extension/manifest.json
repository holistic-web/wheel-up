{
	"manifest_version": 2,
	"name": "Youtube Wheelup",
	"version": "1.0",
	"description": "An extension to enable a user to 'wheel-up' a song playing on youtube.",
	"permissions": [
		"declarativeContent",
		"activeTab"
	],
	"background": {
		"scripts": ["src/background.js"],
		"persistent": false
	},
	"page_action": {
		"default_popup": "src/views/popup/popup.html",
		"default_icon": {
			"16": "assets/icons/get_started16.png",
			"32": "assets/icons/get_started32.png",
			"48": "assets/icons/get_started48.png",
			"128": "assets/icons/get_started128.png"
		}
	},
	"icons": {
		"16": "assets/icons/get_started16.png",
		"32": "assets/icons/get_started32.png",
		"48": "assets/icons/get_started48.png",
		"128": "assets/icons/get_started128.png"
	}
}
